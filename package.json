{
  "name": "@girverket/xenocline",
  "version": "0.0.12",
  "description": "Xenocline provides a streamlined, modular framework to manage and execute Processor Pipelinesâ€”sequences of computational steps or tasks executed systematically to process data or events. It allows developers to define, connect, and orchestrate individual processors into efficient workflows, supporting clear separation of concerns, scalability, and ease of maintenance.",
  "main": "dist/xenocline.cjs",
  "module": "dist/xenocline.js",
  "type": "module",
  "bin": {
    "xenocline": "./dist/xenocline.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/girverket/xenocline.git"
  },
  "exports": {
    ".": {
      "types": "./dist/xenocline.d.ts",
      "import": "./dist/xenocline.js",
      "require": "./dist/xenocline.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build && copyfiles -u 1 \"src/**/*.md\" dist && copyfiles -u 1 \"src/**/*.yaml\" dist",
    "start": "node dist/xenocline.cjs",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "npm run test:coverage && npm run test:readme",
    "test:coverage": "vitest run --coverage",
    "test:readme": "doccident -c .doccident-setup.mjs README.md",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "pipeline",
    "execution",
    "workflow"
  ],
  "author": "Max Drellin <maxdrellin@yahoo.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@doccident/doccident": "^0.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/plugin-transform-typescript": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@swc/core": "^1.12.11",
    "@types/node": "^25.0.5",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^4.0.16",
    "copyfiles": "^2.4.1",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.16"
  }
}
