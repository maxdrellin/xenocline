{
    "name": "@maxdrellin/xenocline",
    "version": "0.0.4",
    "description": "Xenocline provides a streamlined, modular framework to manage and execute Processor Pipelinesâ€”sequences of computational steps or tasks executed systematically to process data or events. It allows developers to define, connect, and orchestrate individual processors into efficient workflows, supporting clear separation of concerns, scalability, and ease of maintenance.",
    "main": "dist/Xenocline.js",
    "type": "module",
    "bin": {
        "Xenocline": "./dist/xenocline.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxdrellin/xenocline.git"
    },
    "packageManager": "pnpm@10.11.0",
    "exports": {
        ".": {
            "import": "./dist/Xenocline.js",
            "types": "./dist/Xenocline.d.ts"
        }
    },
    "scripts": {
        "build": "tsc --noEmit && vite build && copyfiles -u 1 \"src/**/*.md\" dist && copyfiles -u 1 \"src/**/*.yaml\" dist",
        "start": "node dist/Xenocline.js",
        "dev": "vite",
        "watch": "vite build --watch",
        "test": "pnpm run test:coverage",
        "test:coverage": "jest --coverage",
        "test:readme": "doccident -c .doccident-setup.mjs README.md",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run clean && npm run build"
    },
    "keywords": [
        "pipeline",
        "execution",
        "workflow"
    ],
    "author": "Max Drellin <maxdrellin@yahoo.com>",
    "license": "Apache-2.0",
    "dependencies": {
        "@doccident/doccident": "^0.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.27.1",
        "@babel/plugin-transform-modules-commonjs": "^7.27.1",
        "@babel/plugin-transform-typescript": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.27.0",
        "@jest/globals": "^29.7.0",
        "@rollup/plugin-replace": "^6.0.2",
        "@swc/core": "^1.11.24",
        "@types/jest": "^29.5.14",
        "@types/js-yaml": "^4.0.9",
        "@types/luxon": "^3.6.2",
        "@types/node": "^22.15.19",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "copyfiles": "^2.4.1",
        "eslint": "^9.27.0",
        "eslint-plugin-import": "^2.31.0",
        "globals": "^16.1.0",
        "jest": "^29.7.0",
        "rollup-plugin-preserve-shebang": "^1.0.1",
        "rollup-plugin-visualizer": "^5.14.0",
        "ts-jest": "^29.3.4",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-node": "^5.0.1"
    }
}